<h1>ImportData#index</h1>
<%= form_tag import_path, multipart: true do %>
	<%= file_field_tag :file %>
	<%= submit_tag "ImportData" %>
<% end %>

<%= debug(@csv) %>555


<% if @csv %>

	<table class="table">
	  <thead>
	    <tr>
	    <th>Name</th>
	    <th>Price</th>
	    <th>Supplier=id</th>
	      <th>Detail</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @csv.each do |row| %>
	    	<% product = row.to_hash %>
	      <tr>
	        <td><%= product['name'] %></td>
	        <td><%= product['price'] %></td>
	        <td><%= product['supplier_id'] %></td>
	        <td><%= product['detail'] %></td>
	        <td><%= link_to 'Show', product %></td>
	        <td><%= link_to 'Edit', edit_product_path(product) %></td>
	        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>

<p>Info</p>
